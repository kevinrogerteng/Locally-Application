<%= link_to "View All Trips", trips_path %>
<%= link_to "Add Activity", new_activity_path %>
<div class= "Trip Information">
	Trip Name: <%= @trip['name'] %> <br>
	Destination: <%= @trip['destination'] %> <br>
	Description: <%= @trip['description'] %> <br>
	<%= link_to "Edit", edit_trip_path(@trip['id']) %>
	<%= link_to "Delete", trip_path(@trip['id']), method: :delete%><br>
</div>
<br>
Activities:<br>
	<% @activity.each do |activity| %>
		Name: <%= link_to activity['name'], "/trips/#{activity.trip.id}/activities/#{activity['id']}" %><br>
	<% end%><br>





	


	
