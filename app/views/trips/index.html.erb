<div class="container">
	<div class='tripbox'>
	<div class="row">
		<div class="col-sm-12">
	<div class="welcome">
		 <%= link_to raw("<em class=\"glyphicon glyphicon-plus\"> Add New Trip </em>"), new_trip_path, class: "btn-sm btn-default", method: :get %> 
		 </div> 
	</div>
	</div>
		<% @trips.each do |y| %>
			<div class="trip">
				<%= link_to raw("<i>#{y.name} -- Destination: #{y.destination}</i>"), trip_path(y.id), class: "btn-lg btn-danger btn-block active", method: :get %><br>
			</div>
		<% end %>
	</div>
</div>

