<div class="modal fade" id="add_new_trip" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
    </div> <!--row-->
    <h4 class="modal-title" id='myModalLabel'> Add New Trip! </h4>
  </div> <!--modal-header-->
  <div class="modal-body">
    <%= form_for (@trip) do |f| %>

      <%= f.text_field :name, placeholder: "Trip Name", class: "form-control"%><br>
      <%= f.text_field :destination, placeholder: "Destination", class: "form-control" %><br>
      <%= f.text_area :description, placeholder: "Description", class: "form-control" %><br>
  </div> <!-- modal-body-->
    <div class = "modal-footer">
      <%= button_to "Close", class: "btn btn-lg btn-default" data-dismiss="modal" %>
      <%= f.submit "Create Trip", class: "btn btn-lg btn-primary"%>
    </div> <!--modal-footer-->
    <%end%>
  </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->