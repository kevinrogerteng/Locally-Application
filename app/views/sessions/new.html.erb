<div class="row">
  <div class="col-xs-2">
  </div>
      <div class="col-xs-8">
        <div class='signin_header'><h1>Sign in</h1></div>
          <%= form_for(:session, url: sessions_path) do |f| %>
        
          	<div class="form-group">
            			<%= f.text_field :email_address, placeholder: "Email Address", class: "form-control" %> <br>
            </div>

        		<div class="form-group">
              			<%= f.password_field :password, placeholder: "Password", class: "form-control" %> <br>
            </div>
      
<br>
          <%= f.submit "Sign in", class: "btn btn-lg btn-primary" %>
        <% end %>
      </div>
      <div class="col-xs-2">
      </div>
</div>
