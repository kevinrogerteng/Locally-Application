
    <h1>Sign in</h1>
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email_address %>
      <%= f.text_field :email_address %> <br>

      <%= f.label :password %>
      <%= f.password_field :password %> <br>

      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
    <% end %>