<div class="row">
	<div class="col-xs-2">
	</div>
		<div class="col-xs-8">	

	<%= form_for :activity, method: :patch, url: activity_path do |f| %>
		<%= f.text_field :name, class: "form-control"%><br>
		<%= f.text_field :address, class: "form-control" %><br>
		<%= f.text_field :biz_url, class: "form-control" %><br>
		<%= f.text_field :phone, class: "form-control" %><br>
		<%= f.text_field :thumbnail_photo, class: "form-control" %><br>
		<%= f.submit "Update Activity", class: "btn btn-lg btn-info"%>
	<%end%>
	</div>
	<div class="col-xs-2">
	</div>

</div>